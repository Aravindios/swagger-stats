{
  "template" : "swsapirec-*",

  "settings" : {
    "index.refresh_interval" : "5s",
    "analysis" : {
      "analyzer" : {
        "default" : {
          "type" : "standard",
          "stopwords" : "_none_"
        }
      }
    }
  },

  "mappings" : {

    "swsapirec" : {

      "dynamic_templates" : [
    	  { "headers" : {
          "path_match" : "headers.*",
          "mapping": { "type":"string","index":"not_analyzed","doc_values": true}
        }}
      ],

      "properties" : {

        "@starttime": { "type": "date", "format": "dateOptionalTime", "doc_values": true },
        "@endtime": { "type": "date", "format": "dateOptionalTime", "doc_values": true },
        "duration":{ "type":"long", "index": "not_analyzed","doc_values": true },

        "url":{ "type":"string", "index": "not_analyzed","doc_values": true },
        "originalUrl":{ "type":"string", "index": "not_analyzed","doc_values": true },
        "method":{ "type":"string", "index": "not_analyzed","doc_values": true },
        "code":{ "type":"long", "index": "not_analyzed","doc_values": true },
        "codeclass":{ "type":"string", "index": "not_analyzed","doc_values": true },
        "message":{ "type":"string", "index": "not_analyzed","doc_values": true }
      }
    }
  }
}
